@using ASPNETCoreMVCWithAuth.Domains
@model CompanyViewModel
@{
    ViewData["Create"] = "Create Company";
}

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Input company name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Information">Information</label>
        <input asp-for="Information" class="form-control" placeholder="Input information" />
        <span asp-validation-for="Information" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Founded">Founded</label>
        <input asp-for="Founded" class="form-control" placeholder="Input founded" />
        <span asp-validation-for="Founded" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Input image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Industry">Industry</label>
        <select asp-for="Industry" asp-items="@Html.GetEnumSelectList<Industry>()" class="form-control from-control-lg">
                <option>Select</option>
        </select>
        <span asp-validation-for="Industry" class="text-danger"></span>
    </div>
    <div class="form-floating mb-4">
        <button type="submit" class="btn btn-dark float-right mt-3">Create</button>
    </div>
</form>